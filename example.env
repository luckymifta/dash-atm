# Example .env file for ATM Dashboard
# Copy this file to .env and update with your actual credentials
# IMPORTANT: Never commit the actual .env file with real credentials!

# Database connection parameters
DB_HOST=your_database_host
DB_PORT=5432
DB_NAME=atm_monitor
DB_USER=postgres
DB_PASSWORD=your_secure_database_password

# Security Configuration
# CRITICAL: Use strong, randomly generated secrets in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-use-strong-random-key
JWT_ALGORITHM=HS256
PASSWORD_RESET_SECRET=your-password-reset-secret-change-in-production-use-different-key

# Token Expiration Settings (in minutes/hours/days)
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24
REMEMBER_ME_DAYS=30

# Account Security Settings
MAX_FAILED_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15
SESSION_TIMEOUT_WARNING_MINUTES=5

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# Email Configuration (Mailjet)
# Get these credentials from your Mailjet account: https://app.mailjet.com/account/apikeys
MAILJET_API_KEY=your_mailjet_api_key
MAILJET_SECRET_KEY=your_mailjet_secret_key
MAILJET_FROM_EMAIL=noreply@yourdomain.com
MAILJET_FROM_NAME=Your App Name

# Frontend Configuration
FRONTEND_BASE_URL=https://yourdomain.com

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Timezone Configuration
TIMEZONE=Asia/Dili
AUTO_LOGOUT_DILI_TIME=00:00

# SIPA Configuration (if applicable)
SIPA_BASE_URL=https://your-sipa-server.com
SIPA_USERNAME=your_sipa_username
SIPA_PASSWORD=your_sipa_password
SIPA_TIMEOUT=30
SIPA_RETRY_ATTEMPTS=3
SIPA_RETRY_DELAY=5
